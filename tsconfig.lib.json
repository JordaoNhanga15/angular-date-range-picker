/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*.json"],
  "compilerOptions": {
    "outDir": "../../out-tsc/lib",
    "target": "es2015",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": ["node"],
    "lib": [
      "dom",
      "es2018"
    ],
    "strictPropertyInitialization": false,
  },
  "angularCompilerOptions": {
    "enableIvy": true,
    "resolveJsonModule": false,
  },
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts"
  ]
}
