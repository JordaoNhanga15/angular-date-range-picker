/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*.json", "src/**/*.ts", "src/**/*.html", "src/**/*.scss","./src/"],
  "compilerOptions": {
    "outDir": "../../out-tsc/lib",
    "target": "es2015",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": ["node"],
    "lib": [
      "dom",
      "es2018"
    ],
    "strictPropertyInitialization": false,
  },
  "angularCompilerOptions": {
    "enableIvy": true,
    "resolveJsonModule": false,
  },
  "exclude": [
    // "node_modules",
    "src/test.ts",
    "**/*.spec.ts",
    // "**/*.d.ts",
    // "**/*.stub.ts"
  ]
}
